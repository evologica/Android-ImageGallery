<?xml version="1.0" encoding="utf-8"?>
<!--
    If you want to have square items in your grid, we recommend
    using our SquareRelativeLayout item.
-->
<br.com.evologica.imagegallery.SquareRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/buttonRootView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageButton
        android:id="@+id/grid_item_button"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        app:srcCompat="@drawable/ic_image_add"
        android:scaleType="fitXY"
        android:background="?attr/selectableItemBackgroundBorderless"/>

</br.com.evologica.imagegallery.SquareRelativeLayout>